extends ../common/base

block page_var
    script.
        var page_var = {
            id: 'create',
            path: 'plans/',
            use_require_js: true
        }
    script(src='http://int.dpool.sina.com.cn/iplookup/iplookup.php?format=js' type='text/ecmascript')

block content
    .rel
        img.full_bg(src='/images/plans/create/background.png')
        .abs_container
            .center_container
                h1.title 此刻，我们一起去旅行！
                .search_layer
                    .search_form
                        .search_in
                            .text_input
                                i.mypos
                                h2 我的位置 :
                                input.s-ip(type="text" placeholder='城市' name="fromName" id="from" onkeyup="suggestion_from(this.value)" autocomplete="off")
                                #suggestion_from.suggestion(style="width:435px;margin-left:150px;")
                            .text_input
                                i.dest
                                h2 想去哪儿 :
                                input.s-ip(type="text" placeholder='景点/城市/省份' name="arrName" id="arrive" onkeyup="suggestion_to(this.value)" autocomplete="off")
                                #suggestion_to.suggestion(style="width:435px;margin-left:150px;")
                        a(href="#" onclick="go_plan_list()")
                            .s-btn()
                    .city_nav
                        a(data-type=zone.type.city)
                            b 香港
                        a(data-type=zone.type.city)
                            b 澳门
                        a(data-type=zone.type.city)
                            b 北京
                        a(data-type=zone.type.city)
                            b 杭州
                        a(data-type=zone.type.province)
                            b 西藏
                        a(data-type=zone.type.city)
                            b 三亚
                        a(data-type=zone.type.city)
                            b 黄山
                        a(data-type=zone.type.city)
                            b 九寨沟
                        a(data-type=zone.type.city)
                            b 上海
