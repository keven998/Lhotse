extends ../common/base

block page_var
    script.
        var page_var = {
            id: 'edit',
            path: 'plans/',
        }
      
    link(href="/stylesheets/plans/jquery.datetimepicker.css" rel="stylesheet")
    
    
block content
    .bd.t-bd
      h1.t
        | #{locName.from}——#{locName.arr}
        .ugcId(style='display:none') #{id}
        a.btn02.btn02-c4
          | 确定
    
    .content.f-cb     
      .t-left
        h1.time
          | 出发时间：
          input#datetimepicker.date_picker(type='text')
          a.btn02.btn02-c1 一键优化
        
        - var dayCount = 0
        each oneDayRoute in daysRoute
          - dayCount++
          ul.edit-list(data-day=dayCount)
            li.driver.disabled.active
              i.ico01-d D#{dayCount}
              i.ico01.ico01-close
            each spot in oneDayRoute
              li(draggable='true', style='height: 40px;')
                | #{spot.itemName}
                i.ico01.ico01-close
                .id(style='display:none') #{spot.itemId}
                .type(style='display:none') #{spot.type}
        
        .add
          em +
          | 添加一天
      
      
      .t-right
        .search
          input.s-input(placeholder='搜索')
          i.ico02.ico02-search
        .imgs.f-cb
          each spot in spots
            a
              div
                img(src=spot.pic width='213' height='144')
              .id(style='display:none') #{spot._id}
              .type(style='display:none') vs
              em.spot-name #{spot.name}
              br
              i.ico01.ico01-good
              | #{spot.ranking}
              i.ico01.ico01-sugg
              | 建议游玩#{spot.timeCost}小时
              if spot.tags != ''
                em.label #{spot.tags}
              i.ico02.ico02-add
          

    script(src='/javascripts/plans/jquery.sortable.min.js' rel='javascript')
    script(src='/javascripts/plans/jquery.datetimepicker.js' rel='javascript')
    script(src='/javascripts/plans/editsave.js' rel='javascript')
