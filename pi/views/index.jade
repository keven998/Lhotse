extends common/base


block page_var
    script(src='/javascripts/lib/cityselector.js', rel='javascripts')
    link(href='/stylesheets/lib/cityselector.css', rel='stylesheet')
    script.
        var page_var = {
            id: 'index',
            path: '',
            use_require_js: false
