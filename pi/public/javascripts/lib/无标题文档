$(function () {
    var topHd=$('#top'),
        wheight=$(window).height();
        lgLayer=$('.lg-layer');
        layer=$('.layer');
    topHd.on('click','a.btn-login',function(e){
        lgLayer.css('height',wheight);
        lgLayer.show(500);
        layer.show();
        lgLayer.show(500,function(){  
            layer.on('click',function(e){
                sider.hide(500);
                $(this).hide()
            })
        });
    })
})
